@model HelpDesk.Models.Ticket

@{
	ViewBag.Title = "Create";
}
			<div class="row">
				<h3 class="title1">Création d'un Ticket :</h3>
				<div class="form-three widget-shadow">
					<div class="form-horizontal">
					@using (Html.BeginForm())
					{
						@Html.AntiForgeryToken()
						<div class="form-group">
							@Html.LabelFor(model => model.Objet, htmlAttributes: new { @class = "col-sm-2 control-label" })
							<div class="col-sm-8">
								@Html.EditorFor(model => model.Objet, new { htmlAttributes = new { @class = "form-control1", id = "focusedinput", placeholder = "L'Objet de Ticket" } })
								@Html.ValidationMessageFor(model => model.Objet, "", new { @class = "text-danger" })
							</div>
						</div>


							List<SelectListItem> listItems = new List<SelectListItem>();
							listItems.Add(new SelectListItem
							{
								Text = "Normale",
								Value = "Normale",
								Selected = true
							});
							listItems.Add(new SelectListItem
							{
								Text = "Urgent",
								Value = "Urgent"

							});

							<div class="form-group">
								@Html.LabelFor(model => model.Priorite, htmlAttributes: new { @class = "col-sm-2 control-label" })
								<div class="col-sm-8">
									@Html.DropDownListFor(model => model.Priorite, listItems, new { htmlAttributes = new { @class = "form-control1", id = "focusedinput", placeholder = "La priorité du Ticket Normale/Urgent" } })
									@Html.ValidationMessageFor(model => model.Priorite, "", new { @class = "text-danger" })
								</div>
							</div>


								HelpDesk.Models.Categorie categorie = new HelpDesk.Models.Categorie();
								SelectList list = new SelectList(categorie.find_all(), "IdCategorie", "NomCategorie");

								<div class="form-group">
									@Html.LabelFor(model => model.Categorie, htmlAttributes: new { @class = "col-sm-2 control-label" })
									<div class="col-sm-8">
										@Html.DropDownListFor(model => model.Categorie.IdCategorie, list, "Selectionner la Categorie")
										@Html.ValidationMessageFor(model => model.Categorie.IdCategorie, "", new { @class = "text-danger" })
									</div>
								</div>

								<div class="form-group">
									<div class="col-sm-8">
										@Html.TextAreaFor(model => model.Description, new { @class = "form-control1 control2", placeholder = "La Descreption de Ticket", rows = "6" })
										@Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
									</div>
								</div>

								<div class="form-group">
									<div class="col-md-offset-2 col-md-10">
										<input id="sub" type="submit" value="Envoyer le Ticket" class="btn btn-default" />
									</div>
								</div>
					}
	               </div>
				</div>
			</div>
