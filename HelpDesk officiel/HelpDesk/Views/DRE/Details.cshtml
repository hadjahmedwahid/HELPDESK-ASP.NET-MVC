@model HelpDesk.Models.DRE

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>DRE</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NumeroDRE)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NumeroDRE)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NomDRE)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomDRE)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Wilaya)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Wilaya)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AdresseDRE)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AdresseDRE)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id =Model.NumeroDRE }) |
    @Html.ActionLink("Back to List", "Index")
</p>

@if (Model.find_agence() != null)
{
	<h5>Liste de Sous Categorie de @Model.NomDRE</h5>
<div>

	<table class="table">
	@{}
		<tr>
			<th>
				@Html.DisplayName("Numéro Agence")
			</th>
			<th>
				@Html.DisplayName("Nom Agence")
			</th>
			<th>
				@Html.DisplayName("Adresse Agence")
			</th>
			<th>
				@Html.DisplayName("Wilaya d'Agence")
			</th>

			<th></th>
		</tr>

		@foreach (var item in Model.find_agence())
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.IdAgence)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.NomAgence)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.AdresseAgence)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.WilayaAgence)
				</td>

				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.IdAgence }) |
					@Html.ActionLink("Details", "Details", new { id = item.IdAgence }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.IdAgence })
				</td>
			</tr>
		}

	</table>

</div>
}