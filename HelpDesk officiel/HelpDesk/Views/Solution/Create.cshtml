@model HelpDesk.Models.Solution

@{
    ViewBag.Title = "Create";
}
<div id="page-wrapper">
    <div class="main-page">
        <h2>Create</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Solution</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @{HelpDesk.Models.Probleme probleme = new HelpDesk.Models.Probleme();
                    SelectList list = new SelectList(probleme.find_all(), "IdProbleme", "ObjetProbleme");
                }
                <div class="form-group">
                    @Html.LabelFor(model => model.probleme, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.probleme.IdProbleme, list, "Selectionner le Problème")
                        @Html.ValidationMessageFor(model => model.probleme.IdProbleme, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IdSolution, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.IdSolution, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IdSolution, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
                    }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
        </div></div>